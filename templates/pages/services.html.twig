{% extends 'index.html.twig' %}

{% block main %}

<div class="container-fluid">
    <!--Debut Hero -->
    <div class="services-image-hero row align-items-center text-center mt-3 mx-1 rounded">
        <h1 class="titre-principal">Services</h1>
    </div>
    <!--Fin Hero -->
    <!-- Debut liste habitats-->
    {% for service in allService %}
    <div class="section  presentationService justify-content-around p-3 mt-3 mx-1 mb-3 rounded" id="{{ service.nom|url_encode }}">
        <div class="justify-content-center text-center">
            <h2 class="text-primary">{{ service.nom }}</h2>
            
            <div class="row mt-3 align-items-center presentationService__{{ service.nom }}">
                {% if loop.index0 % 2 == 0 %}
                    <div class="col-lg-6">
                {% else %}
                <div class="col-lg-6 order-1">
                {% endif %}
                    <div class="presentationService_text bg-primary text-black rounded p-3">{{ service.description|raw }}</div>
                </div>
                <div class="col-lg-6">
                {% if not service.image is empty %}
                    {% for image in service.image %}
                    {% if image.cover %}
                        <img class=" w-100 mb-3 rounded" src="{{ asset ("images/services/#{ service.image[0].slug }") }}">
                    {% endif %}
                    {% endfor %}
                {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
    <!-- Fin liste habitats -->
</div>
{% endblock %}
{% extends 'dashboard/habitats/dashboardHabitats.html.twig' %}

{% block action %}
<div class="accordion-item">
    <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
        Supprimer service
        </button>
    </h2>
    <div id="flush-collapseTwo" class="accordion-collapse collapse bg-dark show" data-bs-parent="#accordionFlushExample">
    <div class="accordion-body">
            <div class="alert alert-danger mt-4">
                Vous êtes sur le point de supprimer un habitat.
                Etes vous sûr?
            </div>
        <a class="btn btn-primary" href="{{ path('app_dashboard_habitats_deleteHabitat', { id: serviceDelete.id}) }}">Oui</a>
        <a class="btn btn-primary" href="{{ path('app_dashboard_habitats_show') }}">Non</a>
    </div>
</div>
{% endblock %}